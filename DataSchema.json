{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EcoComfort Hub Database Schema",
  "description": "Schema for humidity monitoring and cultural communication system",
  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["_id", "name", "email"]
    },
    "humidity": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "level": { "type": "number", "minimum": 0, "maximum": 100 },
        "measurement_date": { "type": "string", "format": "date-time" },
        "location": { "type": "string" }
      },
      "required": ["_id", "level", "measurement_date"]
    },
    "threshold": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "user_id": { "type": "string" },
        "min_value": { "type": "number" },
        "max_value": { "type": "number" }
      },
      "required": ["_id", "user_id", "min_value", "max_value"]
    },
    "notification": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "user_id": { "type": "string" },
        "message_text": { "type": "string" },
        "date_time": { "type": "string", "format": "date-time" },
        "is_read": { "type": "boolean" }
      },
      "required": ["_id", "user_id", "message_text", "date_time"]
    },
    "thematic_channel": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "topic": { "type": "string" },
        "subscribers_count": { "type": "integer", "minimum": 0 },
        "channel_type": { "type": "string", "enum": ["films", "music", "events"] }
      },
      "required": ["_id", "name", "topic", "channel_type"]
    }
  }
}
